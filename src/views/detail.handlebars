<main class="flex-grow-1 m-auto w-100 d-flex flex-column">
    <section id="productsStore"
        class="flex-grow-1 d-flex flex-column justify-content-evenly align-items-center w-100 mt-2 mb-4">
        <img src="{{product.photo}}" style="height: 420px; width: auto" class="object-fit-cover img-fluid"
            alt="{{product.title}}" />
        <article class="d-flex flex-column justify-content-center align-items-center">
            <h2 id="productTitle" class="subtitle mt-4 mb-2 text-center">{{product.title}}</h2>
            <h5 class="p-2 text-center card-title">Price:
                {{product.price}}</h5>
            <h5 class="p-2 text-center card-title">Stock available:
                {{product.stock}}</h5>
            <input id={{product._id}} class="addToCart btn btn-dark fs-5 m-1 me-3" type="button" value="Add to cart!">
        </article>

    </section>
</main>

<script src="/scripts/addToCart.js"></script>